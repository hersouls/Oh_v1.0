{
  "name": "moonwave-oh-anna-player",
  "version": "1.0.0",
  "type": "module",
  "description": "> \"평범함에서 특별함으로\" - 재능보다 노력으로, 한계를 넘어 자신만의 빛을 찾아가는 여정을 13개의 트랙으로 표현한 음악 플레이어",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 20",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "clean": "rm -rf dist",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "deploy": "npm run build && npm run preview",
    "deploy:gh": "npm run build && gh-pages -d dist",
    "deploy:check": "npm run lint && npm run type-check && npm run build",
    "pwa:generate": "vite-plugin-pwa",
    "pwa:validate": "npx @vite-pwa/assets-generator",
    "preview:prod": "npm run build && serve -s dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hersouls/Oh_v1.0.git"
  },
  "keywords": [
    "music-player",
    "react",
    "typescript",
    "tailwindcss",
    "moonwave",
    "oh-anna",
    "korean-music"
  ],
  "author": "Moonwave Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hersouls/Oh_v1.0/issues"
  },
  "homepage": "https://oh.moonwave.kr",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/howler": "^2.2.12",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "clsx": "^2.1.1",
    "howler": "^2.2.4",
    "lucide-react": "^0.534.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.7.1",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.0"
  }
}
